{
  "name": "national-boundaries-api",
  "version": "1.0.0",
  "description": "National boundaries API",
  "prettier": "@aplinkosministerija/biip-prettier-config",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --env --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "start": "moleculer-runner --config dist/moleculer.config.js",
    "cli": "moleculer connect NATS",
    "generate-client": "openapi-generator-cli generate",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose -p national-boundaries-api-local up --build -d",
    "dc:logs": "docker-compose -p national-boundaries-api-local logs -f",
    "dc:down": "docker-compose -p national-boundaries-api-local down"
  },
  "devDependencies": {
    "@aplinkosministerija/biip-prettier-config": "^1.1.0",
    "@aplinkosministerija/eslint-config-biip-api": "^1.0.0",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^20.3.1",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "lint-staged": "14.0.1",
    "moleculer-repl": "^0.7.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0"
  },
  "dependencies": {
    "@moleculer/database": "ambrazasp/moleculerjs-database",
    "@sentry/node": "^7.61.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "moleculer": "^0.14.20",
    "moleculer-auto-openapi": "^1.1.5",
    "moleculer-decorators": "^1.3.0",
    "moleculer-knex-filters": "github:DadPatch/moleculer-knex-filters",
    "moleculer-sentry": "^2.0.0",
    "moleculer-web": "^0.10.4",
    "objection": "^3.1.4",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,html,css}": "prettier --write"
  },
  "eslintConfig": {
    "extends": "@aplinkosministerija/eslint-config-biip-api"
  }
}
